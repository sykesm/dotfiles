theme = nightfly

config-file = fonts/jetbrains-mono
font-size = 14

# Disable ligatures
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# Setup new window dimensions
window-height = 43
window-width = 132

# Window decorations
macos-titlebar-style = hidden
window-padding-color = background

# Setup OSC-52 clipboard features
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = true

# Solid block cursor by default
cursor-style = block
cursor-style-blink = false

# Disable cursor integration so the default behavior
# doesn't get replaced with a bar
shell-integration-features = no-cursor

# URLs are links
link-url = true

# Quit the program when all of the windows are gone
quit-after-last-window-closed = true
